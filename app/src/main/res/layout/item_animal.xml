<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/animalLayout"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/animalImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/animalName"
        style="@style/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#afff"
        android:gravity="center"
        android:padding="4dp"
        android:text="Animal name"
        app:layout_constraintBottom_toBottomOf="@+id/animalImageView"
        app:layout_constraintEnd_toEndOf="@+id/animalImageView"
        app:layout_constraintStart_toStartOf="@+id/animalImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>